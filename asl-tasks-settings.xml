<?xml version="1.0" encoding="UTF-8"?>
<project name="asl-tasks-settings">
    <description>
        This file provides some threshold settings of CI tools.
    </description>

    <!-- sourcemonitor threshold settings. -->
    <property name="sourcemonitor.display.file.details" value="true" />
    <property name="sourcemonitor.display.method.details" value="true" />
    <property name="sourcemonitor.complexity.threshold" value="6" />
    <property name="sourcemonitor.maxcomplexity.threshold" value="-1" />
    <property name="sourcemonitor.avgcomplexity.threshold" value="-1" />
    <property name="sourcemonitor.avgcomplexity2statements.threshold" value="15" />

    <!-- cobertura threshold settings. -->
    <property name="cobertura.class.linerate.threshold" value="50" />
    <property name="cobertura.class.branchrate.threshold" value="50" />
    <property name="cobertura.package.linerate.threshold" value="50" />
    <property name="cobertura.package.branchrate.threshold" value="50" />
    <property name="cobertura.total.linerate.threshold" value="50" />
    <property name="cobertura.total.branchrate.threshold" value="50" />
</project>
